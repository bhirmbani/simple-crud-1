<% include ./partials/header %>
    
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <div class="ui menu">
      <div class="header item">Movie for Moviers</div>
      <a href="/add-movie" class="item">Add movie</a>
      <a href="/moviers" class="item">Moviers</a>
      <a href="/signup" class="item">Sign Up</a>
      <!-- <a href="/logout" class="item">Logout</a> -->
      <a href="#" class="item ui active red">Welcome <%= username %></a>
    </div>

    

    <table class="ui striped table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Rating</th>
          <th>Movier</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% movies.forEach(movie => { %>
        <tr>
          <td><a href="/movies/<%= movie.id %>"><%= movie.title %></a> <img class="front-pic" src="<%= movie.image_url %>" alt=""></td>
          <td><%= movie.description %></td>
          <td><div class="ui star rating" data-rating="<%= movie.rating %>"></div></td>

          <td>
            <span class="user-info">posted by <a href="/"><%= movie.Movier.username %></a></span>
          </td>
          <td>
            <% if(movie.Movier.username === username) { %> 
            <a href="/edit/<%= movie.id %>"><i class="edit icon"></i></a>
            <a href="/delete/<%= movie.id %>"><i class="erase icon"></i></a>
            <% } else {%>

            <% }%>
          </td>

        </tr>
        
        <% }) %>
      </tbody>
    </table>

<% include ./partials/footer %>